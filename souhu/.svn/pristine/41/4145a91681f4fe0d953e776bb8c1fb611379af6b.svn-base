<script type="text/javascript" src="../../script/api.js"></script>
<script>
	function emptyopt () {
	}
	function openShareFrame()
	{
		api.openFrame({
		    name: 'shareframe',
		    url: './hot_share.html',
		    bounces:false,
		    rect:{
				x:0,
				y:0,
				w:'auto',
				h:'auto'
			},
	    });
	}
	
	function openNewWindow(type)
	{
		api.openWin({
		    name: type,
		    url: './'+type+'.html',
		    pageParam: {title:'曝柯震东恋上台版Baby 球场打闹生情愫'},
		    bounces: true,
		    // opaque: false,
		    // bgColor:  'rgba(255,255,255,0)',
		    // vScrollBarEnabled:false,
		    // hScrollBarEnabled:true
	    });
	}

	apiready = function (){
		api.setRefreshHeaderInfo({
			visible: true,
			bgColor: 'rgba(0,0,0,0)',
			textColor: '#666',
			textDown: '下拉刷新',
			textUp: '释放刷新'	
		}, function(ret, err){
		    api.refreshHeaderLoadDone();
		});
	};
</script>
