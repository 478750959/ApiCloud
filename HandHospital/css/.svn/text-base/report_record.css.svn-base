#main {
	padding-top: 5px;
}

.content {
	text-align: center;
	padding: 8px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-left: 1px solid #BDBDBD;
	border-right: 1px solid #BDBDBD;
	border-bottom: 1px solid #BDBDBD;
}

.header_bg {
	background: rgb(64,177,192);
	border-radius: 5px 5px 0 0;
	-webkit-border-radius: 5px 5px 0 0;
	border: none;
}

.left,.middle,.right {
	font-size: 16px;
	height: 20px;
	line-height: 20px;
	color: #5e5e5e;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	box-flex: 1;
	-webkit-box-align: center;
}

.header_bg .left {
	color: #ffffff;
}

.header_bg .middle {
	color: #ffffff;
}


.text-overflow {
	display: block;/*内联对象需加*/
	width: 31em;
	word-break: keep-all;/* 不换行 */
	white-space: nowrap;/* 不换行 */
	overflow: hidden;/* 内容超出宽度时隐藏超出部分的内容 */
	text-overflow: ellipsis;/* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
