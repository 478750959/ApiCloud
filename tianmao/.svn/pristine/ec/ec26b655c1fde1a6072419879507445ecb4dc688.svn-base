<script type="text/javascript">
    var changeTable = function(index){
        var tabs = $api.domAll('.tabs-inner');
        var tabsTable = $api.domAll('.photos_table');
        if (index == 0) {
            $api.addCls($api.dom('.photos_filter .new'),'active');
            $api.removeCls($api.dom('.photos_filter .hot'),'active');
            $api.addCls(tabsTable[0],'active');
            $api.removeCls(tabsTable[1],'active');
        } else{
            $api.removeCls($api.dom('.photos_filter .new'),'active');
            $api.addCls($api.dom('.photos_filter .hot'),'active');
            $api.removeCls(tabsTable[0],'active');
            $api.addCls(tabsTable[1],'active');
        }
    };
