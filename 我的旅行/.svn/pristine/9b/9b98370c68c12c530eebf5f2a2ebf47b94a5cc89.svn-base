    </div>
	<script type="text/javascript" src="../script/api.js"></script>
	<script type="text/javascript" src="../script/jquery-1.9.1.min.js"></script>
	<script type="text/javascript" src="../script/jquery.lazyload.min.js"></script>
	<script type="text/javascript"> 
		var page = 1;
		/*初始化*/
		apiready = function(){ 			
			setRefreshHeader();
			api.addEventListener({
				name: 'scrolltobottom'
			}, function(ret, err) {
				page = page + 1;
				selectPageInfo();
				api.parseTapmode();
			});
			funWinIni();
		}

		/*网络判断*/
		function funWinIni(){
			if( api.connectionType == 'none' ){
				api.toast({
				    msg: '网络错误，请检查网络',
				    duration: 2000,
				    location: 'bottom'
				}); 
			}else{
				loadListInfo();
			};
		} 
		
		var listInfo;
			
		/*读取行程信息*/
		function loadListInfo(){ 
			var query = api.require('query');
			query.createQuery(
			    function(ret, err) {
			        var qid = ret.qid;
			        var model = api.require('model');
					model.config({
					    appKey: '0F18115F-E530-D1C0-221B-89BA373CA1F2',
					    host: 'https://d.apicloud.com'
					});
                    query.desc({
                            qid: qid,
                            column: "updatedAt"
                    });
			        model.findAll({
			            class:'my_trip',
			            qid:qid
			        }, function(ret, err) {
			            if (ret) {
        					listInfo = ret;
        					selectPageInfo();
			            }
			        });
			    }
			);
		}
		
		function selectPageInfo(){
			var p = listInfo.length % 10;
			var p_i = listInfo.length / 10;
			var pages = 0;
			if(p == 0) {
				pages = p_i;
			}
			else {
				pages = p_i + 1;
			}
			if(pages < page) {
				api.toast({
					//msg: ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode)
					msg: ('已经没有数据！')
				});
				page = page - 1;
				return false;
			} 
			for(var i=(page-1)*10; i<page*10; i++){ 
				var lInfo = listInfo[i];
				if(lInfo) {
					var id = lInfo.id,
						sdate = lInfo.sdate,
						edate = lInfo.edate,
						location = lInfo.location,
						note = lInfo.note,
						pic = lInfo.pic,
						createdAt = lInfo.createdAt;
					
					var listHtml = '';
					listHtml += '<div class="receiveLog '+(i==0?"":"space")+'" onclick="toDetail(\''+id+'\')"><img class="lazy" src="'+pic+'" width="100%" />';								
					listHtml += '<div class="receive-info">' + 
						'<div class="home-info flexBox"><label>位置</label><span class="item-most">'+location+'</span></div><div class="home-info flexBox">'+
						'<label>详细</label><span class="item-most">'+note+'</span></div></div><div class="time">'+sdate + "~" + edate+'</div></div>';
			        $(".warp").append(listHtml);
			        $("img.lazy").lazyload({effect:'fadeIn'});
		        }
			} 
		}
		
		/*打开详细页面*/
		function toDetail(id) {
			api.openWin({
				name: 'my_trip_info' + id,
				url: 'my_trip_info.html',
				rect: {
					x: 0,
					y: 0,
					w: api.winWidth,
					h: api.winHeight
				},
				pageParam: { 
					id: id
				},
				bounces: false,
				delay: 200
			});
		}
				
		/*下拉刷新方法*/
		function setRefreshHeader() {
			api.setRefreshHeaderInfo({
				visible: true,
				bgColor: '#ccc',
				textColor: '#fff',
				textDown: '下拉刷新...',
				textUp: '松开刷新...',
				showTime: true
			}, function(ret, err) {
				$(".warp").html("");
				page = 1;
				loadListInfo();
				api.refreshHeaderLoadDone();
			});
		}
	</script>
</body>
