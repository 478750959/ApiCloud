						    value: {
						        pic: body.pic.url
						    }
						}, function(ret, err){
							console.log(JSON.stringify(ret));
						    if(ret){
						        //do something
						    }
							/*api.toast({
								//msg: ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode)
								msg: ('保存第'+i+'张图片成功！')
							});*/
							if(listPath.length == 1) {
								api.hideProgress();
		            			api.closeFrame();
							}
						});
					}
					else {
						/*api.toast({
							//msg: ('错误码：' + err.code + '；错误信息：' + err.msg + '网络状态码：' + err.statusCode)
							msg: ('保存第'+i+'张图片成功！')
