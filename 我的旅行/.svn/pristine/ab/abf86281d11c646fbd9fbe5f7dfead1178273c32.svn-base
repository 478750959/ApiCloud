				var img = 'image' + i;
				if(lpic != "") {
					lpic += ';';
				}
				lpic += listBase[i];
			}
			d['lpic'] = lpic;*/
			console.log(JSON.stringify(d));
	        var model = api.require('model');
			model.config({
			    appKey: '0F18115F-E530-D1C0-221B-89BA373CA1F2',
			    host: 'https://d.apicloud.com'
			});
			model.insert({
			    class: 'my_trip',
				value : d
			}, function(ret_trip, err) {
				console.log(JSON.stringify(ret_trip));
