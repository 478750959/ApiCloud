		/*初始化*/
		apiready = function(){ 
			var location = $api.getStorage('location');
			console.log(JSON.stringify(location));
			if(location){
				$("#location").val(location.address);
			} 
			
			//$(".scan-cont").css("max-height", api.winHeight - 50 - 62);
			
			$("#sdate").click(function(){
				var this_sdate = $(this).val();
				var specialDate = [{
