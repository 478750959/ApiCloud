<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>APP</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../../css/common.css" />
    <style>
        #wrap{
            background-color: #FFF;
        }
        #main{
            padding: 0 1em;
            position: relative;
            background: #2B2B2B url(../../res/drawable-xhdpi/logo_word.png) center 52px no-repeat;
            background-size: 145px 152px;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-flex-flow: column;
            flex-flow: column;
        }
        #movieDetailBackBtn{
            position: absolute;
            left: 0;
            bottom: 0;
            width: auto;
            height: 48px;
            background: url(../../res/drawable-xhdpi/arrow_left_yellow.png) 8px center no-repeat;
            background-size: 7px 14px;
        }
        #movieDetailBackBtn:active{
            background-color: #191919;
        }
        #movieDetailBackBtn .chooseCityImg{
            display: inline-block;
            border: none;
            outline: none;
            width: 32px;
            height: 32px;
            float: left;
            margin-left: 22px;
            margin-top: 7px;
            
        }
        #movieDetailBackBtn .chooseCityBackSpan{
            color: #D4A82A;
            line-height: 48px;
            padding: 0 1em;
        }
        #chooseStyleBtn{
            position: absolute;
            right: 0;
            bottom: 0;
            height: 48px;
            width: 48px;
            background: url(../../res/drawable-xhdpi/ico_share_white.png);
            background-size: 100% 100%;
        }
        #chooseStyleBtn:active{
            background: url(../../res/drawable-xhdpi/ico_share_orange.png);
            background-size: 100% 100%;
        }

        .out_box{
            width: 100%;
            height: 100%;
            position: relative;
            -webkit-box-flex: 1;
            -webkit-flex: 1;
            flex: 1;
        }


        .login_list{
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
        }
        .login_list .login_li{
            height: 43px;
            text-align: center;
            vertical-align: middle;
        }
        .login_list .login_li span{
            height: 43px;
            color: #FFF;
            font-size: 1.2em;
            line-height: 43px;
        }
        .login_list .login_li .logo{
            vertical-align: middle;
        }
        .login_list .wechat{
            background-color: #44BD4C;
            margin-bottom: 35px;
        }
        .login_list .wechat .logo{
            background: url(../../res/drawable-xhdpi/wechat_logo.png) center center no-repeat;
            background-size: 26px 22px;
            width: 26px;
            height: 100%;
            display: inline-block;
        }
        .login_list .wechat:active{
            background-color: #46AE4D;
        }
        .login_list .qq{
            background-color: #2D96C9;
        }
        .login_list .qq .logo{
            background: url(../../res/drawable-xhdpi/icon_qq_white.png) center center no-repeat;
            background-size: 19px 20px;
            width: 19px;
            height: 100%;
            display: inline-block;
        }
        .login_list .qq:active{
            background-color: #2888B6;
        }
    </style>
</head>
<body>
    <div id="wrap">
        <div id="header">
            <a id="movieDetailBackBtn" onclick="api.closeWin();" tapmode>
                <img src="../../res/drawable-hdpi/ic_launcher.png" class="chooseCityImg">
                <span class="chooseCityBackSpan">帐号登录</span>
            </a>
        </div>
        <div id="main">
            <!-- icon_qq_white -->
            <!-- wechat_logo -->
            <div class="out_box">
                <ul class="login_list">
                    <li class="login_li wechat" tapmode>
                        <i class="logo"></i>
                        <span>微信授权登录</span>
                    </li>
                    <li class="login_li qq" tapmode>
                        <i class="logo"></i>
                        <span>QQ帐号登录</span>
                    </li>
                </ul>
            </div>
            
        </div>

    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript">

    apiready = function(){
        
        var header = $api.byId('header');
        $api.fixIos7Bar(header); 
        var headerPos = $api.offset(header);
        var wW = api.winWidth;
        var wH = api.winHeight;
        var movieDetailBackBtn = $api.byId('movieDetailBackBtn');


    };
</script>
</html>